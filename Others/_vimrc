set autochdir

set ruler		" show the cursor position all the time
"set rulerformat=%55(%{strftime('%a\ %b\ %e\ %I:%M\ %p')}\ %5l,%-6(%c%V%)\ %P%) "display datetime
set laststatus=2 "black status line at bottom of window
